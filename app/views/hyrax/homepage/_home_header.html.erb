<section class="hero">
	<!-- note: no section top -->
	<div class="hero-image in-page" style="background:url(<%= asset_path 'arch-hero-bg-antenna.jpg' %>) no-repeat left center / cover;">
		<h3>Share Your Scholarship</h3>
		<p>Research and Data Repository</p>
		<ul class="center-list">
			<li>
        <% if @presenter.display_share_button? %>
            <% if signed_in? %>
              <% if @presenter.create_many_work_types? %>
                <%= link_to '#',
                  class: "nu-button button",
                  data: { behavior: 'select-work', target: '#worktypes-to-create', 'create-type' => 'single' } do %>
                  <%= t('hyrax.share_button') %>
                <% end %>
              <% else # simple link to the first work type %>
                <%= link_to new_polymorphic_path([main_app, @presenter.first_work_type]),
                      class: 'nu-button button' do %>
                  <%= t('hyrax.share_button') %>
                <% end %>
              <% end %>
            <% else %>
              <%= link_to hyrax.my_works_path, class: "nu-button button" do %>
                <%= t('hyrax.buttons.get_started') %>
              <% end %>
            <% end %>
        <% end %>
      </li>
		</ul>
	</div>
</section>
