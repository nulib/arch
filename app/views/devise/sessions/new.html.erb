<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal login-form' } do |f| %>
  <div class="form-group">
    <label for="user_username" class="col-sm-2 control-label">Northwestern Net ID:</label>
    <div class="col-sm-10">
      <%= f.text_field :username, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
