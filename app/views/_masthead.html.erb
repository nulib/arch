<header>
  <a href="#main-content" class="screen-reader-shortcut"
    >Skip to main content</a
  >
  <div id="top-bar">
    <div class="contain-1120">
      <div id="left">
        <div id="northwestern">
          <a
            href="http://www.northwestern.edu/"
            title="Northwestern University Home"
            ><span class="hide-label">Northwestern University</span></a
          >
        </div>
        <div id="parent-unit"><a href="#">Parent Unit Name</a></div>
      </div>
      <div id="global-links" aria-label="global links navigation">
        <ul id="user_utility_links">
          <% if user_signed_in? %>
            <li class="">
              <%= link_to hyrax.dashboard_profile_path(current_user), role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false} do %>
                <span class="sr-only"><%= t("hyrax.toolbar.profile.sr_action") %></span>
                <span class="hidden-xs">&nbsp;<%= current_user.name %></span>
                <span class="sr-only"> <%= t("hyrax.toolbar.profile.sr_target") %></span>
                <span class="fa fa-user"></span>
                <span class="caret"></span>
              <% end %>
              <ul class="" role="menu">
                <li><%= link_to t("hyrax.toolbar.dashboard.menu"), hyrax.dashboard_path %></li>
                <li><%= link_to t("hyrax.toolbar.profile.logout"), main_app.destroy_user_session_path %></li>
              </ul>
            </li><!-- /.btn-group -->
          <% else %>
            <li>
              <%= link_to main_app.new_user_session_path do %>
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span > <%= t("hyrax.toolbar.profile.login") %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div id="quick-links" aria-label="quick links navigation">
    <ul>
      <li><%= link_to t('Browse'), main_app.search_catalog_path %></li>
      <li><%= link_to t(:'hyrax.controls.about'), hyrax.about_path %></li>
      <li><%= link_to t(:'hyrax.controls.help'), hyrax.help_path %></li>
      <li><%= link_to t(:'hyrax.controls.contact'), hyrax.contact_path %></li>
    </ul>
  </div>
  <div id="bottom-bar" class="contain-1120">
    <div id="site-name">
      <h1><a href="/">LIBRARIES | ARCH</a></h1>
    </div>
    <div id="search" class="hide-mobile">
      <div class="search-form searchblox">
        <form id="search-form-header" accept-charset="UTF-8" action="/catalog" class="avalon-search-query-form avalon-form-search" method="get" role="search">
          <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
          <%= hidden_field_tag :search_field, 'all_fields' %>
  				<label class="hide-label" for="q-desktop">Search audio or video</label>
          <input id="search-field-header" name="q" placeholder="Search" type="text" value="">
  				<button type="submit"><span class="hide-label">Search</span></button>
  			</form>
      </div>
    </div>
  </div>
  <div id="mobile-links">
    <a href="#mobile-nav" class="mobile-link mobile-nav-link"
      ><span class="hide-label">Menu</span></a
    >
    <nav id="mobile-nav" aria-label="mobile menu">
      <div id="mobile-nav-bottom">
        <!-- from #global-links -->
        <ul id="mobile-nav-bottom-left">
          <% if user_signed_in? %>
            <li>
              <%= link_to hyrax.dashboard_profile_path(current_user), aria: { haspopup: true, expanded: false} do %>
                <span class="sr-only"><%= t("hyrax.toolbar.profile.sr_action") %></span>
                <span class="hidden-xs">&nbsp;<%= current_user.name %></span>
                <span class="sr-only"> <%= t("hyrax.toolbar.profile.sr_target") %></span>
              <% end %>
            </li>
            <li><%= link_to t("hyrax.toolbar.dashboard.menu"), hyrax.dashboard_path %></li>
            <li><%= link_to t("hyrax.toolbar.profile.logout"), main_app.destroy_user_session_path %></li>
          <% else %>
            <li>
              <%= link_to main_app.new_user_session_path do %>
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span > <%= t("hyrax.toolbar.profile.login") %>
              <% end %>
            </li>
          <% end %>
        </ul>
        <!-- from #quick-links -->
        <ul id="mobile-nav-bottom-right">
          <li><%= link_to t('Browse'), main_app.search_catalog_path %></li>
          <li><%= link_to t(:'hyrax.controls.about'), hyrax.about_path %></li>
          <li><%= link_to t(:'hyrax.controls.help'), hyrax.help_path %></li>
          <li><%= link_to t(:'hyrax.controls.contact'), hyrax.contact_path %></li>
        </ul>
      </div>
    </nav>
    <a href="#mobile-search" class="mobile-link mobile-search-link"
      ><span class="hide-label">Search</span></a
    >
    <div id="mobile-search">
      <div class="search-form searchblox">
        <form accept-charset="UTF-8" action="/catalog" class="avalon-search-query-form avalon-form-search" method="get" role="search">
          <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
          <%= hidden_field_tag :search_field, 'all_fields' %>
          <label class="hide-label" for="q-mobile">Search</label>
          <input id="search-field-header" name="q" placeholder="Search" type="text" value="">
          <button type="submit"><span class="hide-label">Search</span></button>
        </form>
      </div>
    </div>
  </div>
</header>
